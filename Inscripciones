private async findCodSuc(centro_costo: string){
      const cod_suc = await this.prismaService.$queryRaw<any[]>(
          `SELECT usr_sucursal FROM gen_clasif1 WHERE codigo = ?`,
          centro_costo
      );
      if (!cod_suc.length) {
          throw new BadRequestException(`No se encontr√≥ cod_suc para el centro de costo ${centro_costo}`);
      }
      return cod_suc[0].usr_sucursal;
  }
}




const cod_suc = await this.findCodSuc(data.centro_costo);