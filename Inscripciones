import { IsNumber, IsOptional, IsString, Length } from 'class-validator';

export class ArticuloDto {
  @IsString()
  @Length(1, 40)
  item: string;

  @IsNumber({ maxDecimalPlaces: 4 })
  cantidad: number;

  @IsNumber({ maxDecimalPlaces: 4 })
  cos_uni: number;

  @IsNumber({ maxDecimalPlaces: 4 })
  pre_vta: number;

  @IsOptional()
  @IsNumber({ maxDecimalPlaces: 4 })
  cos_unai?: number;

  @IsNumber({ maxDecimalPlaces: 4 })
  por_des: number;

  @IsOptional()
  @IsString()
  @Length(1, 200)
  usr_descrip_cue?: string;

  @IsOptional()
  @IsString()
  @Length(1, 3)
  bodega?: string;

  @IsOptional()
  @IsNumber()
  dia_pla?: number;
}