const aura = cantidad[i];        // dato del usuario
const nova = items[i];           // dato real novasoft

// Conversión a número
const cantidadUsuario = Number(aura.cantidad);
const cantidadNovasoft = Number(nova.cantidad);

// Validación estricta
if (cantidadUsuario > cantidadNovasoft) {
  return {
    codigo: '400',
    mensaje: `La cantidad ingresada (${cantidadUsuario}) supera la cantidad disponible en Novasoft (${cantidadNovasoft}) para el item ${nova.item}`,
    item: nova.item
  };
}

// Si quieres evitar 0 o negativos:
if (cantidadUsuario <= 0) {
  return {
    codigo: '400',
    mensaje: `La cantidad ingresada debe ser mayor a 0 para el item ${nova.item}`,
    item: nova.item
  };
}