const codigoAura = String(aura.codItem).split(' - ')[0].trim();
const descripcionAura = (aura['Descripci√≥n'] || '').trim();

const ingresadoERP = await this.prismaNovasoftService.$queryRawUnsafe<any[]>(`
  SELECT ISNULL(SUM(cantidad), 0) total
  FROM inv_inf_inv
  WHERE usr_pedido = '${num_o}'
    AND obs_orc LIKE '%' + '${Referencia}' + '%'
    AND item = '${codigoAura}'
    AND usr_descrip_cue = '${descripcionAura}'
`);

const yaIngresado = Number(ingresadoERP[0]?.total || 0);