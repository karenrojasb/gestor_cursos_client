for (let i = 0; i < items.length; i++) {
  const aura = cantidad[i];    // { item, cantidad }
  const nova = items[i];       // item real de Novasoft

  // âœ” cantidad real ingresada por el usuario
  const cantidadUsuario = Number(aura.cantidad);

  // âœ” cantidad real disponible en Novasoft
  const cantidadNovasoft = Number(nova.cantidad);

  // ðŸ”¥ VALIDACIONES CORRECTAS
  if (isNaN(cantidadUsuario)) {
    return {
      codigo: '400',
      mensaje: `La cantidad ingresada no es vÃ¡lida para el item ${nova.item}`,
      item: nova.item,
    };
  }

  if (cantidadUsuario <= 0) {
    return {
      codigo: '400',
      mensaje: `La cantidad debe ser mayor a 0 para el item ${nova.item}`,
      item: nova.item,
    };
  }

  if (cantidadUsuario > cantidadNovasoft) {
    return {
      codigo: '400',
      mensaje: `La cantidad ingresada (${cantidadUsuario}) supera la disponible (${cantidadNovasoft}) para el item ${nova.item}`,
      item: nova.item,
    };
  }

  // ðŸ“Œ Puedes agregar aquÃ­ el INSERT dentro del FOR si es por item
  // await this.prismaNovasoftService.$executeRawUnsafe(...)

}